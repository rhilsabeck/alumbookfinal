<div class="row">
  <div class="medium-10 large-8 small-centered columns">
    <div class="filter-bar">
      <span class="filter-bar-label">Show:</span>
      <ul class="filter-bar-filters">
        <li class="<%= 'active' if current_page?(internships_path) %>">
          <%= link_to 'Jobs', internships_path %>
        </li>
        <li class="<%= 'active' if current_page?(internship_internships_path) %>">
          <%= link_to 'Internships', internship_internships_path %>
        </li>
      </ul>
    </div>
    <% unless @opportunities.blank? %>
      <% @opportunities.each do |giving_back| %>
        <%= render :partial => 'board', :locals => {:giving_back => giving_back} %>
      <% end %>
    <% else %>
      <%= render 'shared/empty', message: "No opportunities." %>
    <% end %>
  </div>
</div>

