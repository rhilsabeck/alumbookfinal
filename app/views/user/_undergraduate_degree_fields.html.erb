
<div class="pack pack-middle nested-fields">
  <div class="pack-item pack-full">
    <div class="row">
      <div class="medium-7 columns">
        <% f.object.build_college unless f.object.college %>
        <%= f.fields_for :college do |f_college| %>
          <%= f_college.label :college_name %>
          <%= f_college.text_field :college_name %>
        <% end %>
      </div>
      </div>
      <div class="row">
      <div class="medium-5 columns">
        <% f.object.build_degree unless f.object.degree %>
        <%= f.fields_for :degree do |f_degree| %>
        <%= f_degree.label :major_name %>
        <%= f_degree.text_field :major_name %>
        </div>
      <div class="medium-7 columns">
        <%= f_degree.label :type, 'Degree' %>
        <%= f_degree.select :type, Degree.undergraduate_types.map { |w,| [Degree.humanize_type(w), w] } %>
        <% end %>
      </div>
      </div>
      <div class="row">
      <div class="medium-12 columns">
        <%= f.label :graduation_date %>
        <%= f.date_select :graduation_date, {order: [:month, :year],discard_day: true,  include_blank: true, start_year: 1920}, {class: "date-select"}  %>
      </div>
    </div>
  </div>
  <div class="pack-item pack-shrink">
    <ul class="button-group actions">
      <li>
        <%= link_to_remove_association f, class: 'small alert icon button' do %>
          <i class="fi-x"></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
