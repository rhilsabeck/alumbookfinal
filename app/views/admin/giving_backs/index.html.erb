<div class="row">
  <div class="medium-10 large-8 small-centered columns">
    <div class="filter-bar">
      <span class="filter-bar-label">Show:</span>
      <ul class="filter-bar-filters">
        <li class="<%= 'active' if current_page?(admin_giving_backs_path) %>">
          <%= link_to 'New', admin_giving_backs_path %>
        </li>
        <li class="<%= 'active' if current_page?(contacted_admin_giving_backs_path) %>">
          <%= link_to 'Contacted', contacted_admin_giving_backs_path %>
        </li>
        <li class="<%= 'active' if current_page?(approved_admin_giving_backs_path) %>">
          <%= link_to 'Approved', approved_admin_giving_backs_path %>
        </li>
        <li class="<%= 'active' if current_page?(archived_admin_giving_backs_path) %>">
          <%= link_to 'Archived', archived_admin_giving_backs_path %>
        </li>
      </ul>
    </div>
    <% unless @opportunities.blank? %>
      <% @opportunities.each do |giving_back| %>
        <%= render giving_back %>
      <% end %>
    <% else %>
      <%= render 'shared/empty', message: "No Connections" %>
    <% end %>
  </div>
</div>
