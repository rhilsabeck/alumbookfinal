<!--RESTful action SHOW standard route-->
<div class="row">
  <div class="large-12 columns">
    <h1>Account Details</h1>
    <br>
    <!--Display current information from LOGIN model-->
    <p>
      <strong>Name: </strong><br><span style="margin-left:2em"><%= @login.first_name.camelize%> <%= @login.middle_initial.upcase%> <%= @login.last_name.camelize%></span><br>
      <strong>Email: </strong><br><span style="margin-left:2em"><%= @login.email.upcase%></span><br>

      <!--Display remaining login details all from LOGIN model-->
      <strong>Username: </strong><br><span style="margin-left:2em"> <%= @login.username.upcase%></span><br>
      <strong>Type: </strong><br><span style="margin-left:2em"><%= @login.type.upcase%></span>  <br>
      <strong>Account Created: </strong><br><span style="margin-left:2em"><%= @login.created_at.to_s(:date_format)%></span><br> <!--date_format defined in environment.rb for global use-->
      <strong>Last Updated: </strong><br><span style="margin-left:2em"><%= @login.updated_at.to_s(:date_format)%></span><br>
      <strong>Last Logged in: </strong><br><span style="margin-left:2em"><%= @login.last_sign_in_at.to_s(:date_format)%></span><br>
      <strong>Number of Logins: </strong><br><span style="margin-left:2em"><%= @login.sign_in_count.to_s(:date_format)%></span><br>
    </p>
  </div>
</div>
